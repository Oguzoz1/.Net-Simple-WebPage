@model Product
@{
    ViewData["Title"] = Model.Name; 
}

<div class="col-md-4 mb-4"> 
    <div class="card">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="~/img/@Model.Image" class="card-img" alt="@Model.Name">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">
                        <strong>Fiyat:</strong> @Model.Price ₺
                    </p>
                    <p class="card-text">
                        <strong>Kategori:</strong> @Model.Category?.Name
                    </p>
                    <p class="card-text">
                        <strong>Sayfa Sayısı:</strong> @Model.Pages
                    </p>
                    <p class="card-text" style="max-height: 60px; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical;">
                        <strong>Açıklama:</strong> @Model.Description
                    </p>
                    <div class="mt-4">
                        <form asp-controller="Cart" asp-action="AddToCart" method="post">
                            <input type="hidden" name="productId" value="@Model.ProductId" />
                            <button type="submit" class="btn btn-sm btn-primary">Sepete Ekle</button>
                        </form>
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-sm btn-primary">Detaylar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
