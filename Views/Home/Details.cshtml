@model ProductDetailsViewModel
@{
    ViewData["Title"] = "Ürün Detayları";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="~/img/@Model.Image" class="card-img" alt="@Model.Name">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h1 class="card-title">@Model.Name</h1>
                            <p class="card-text">
                                <strong>Fiyat:</strong> @Model.Price ₺
                            </p>
                            <p class="card-text">
                                <strong>Kategori:</strong> @Model.Category?.Name
                            </p>
                            <p class="card-text">
                                <strong>Sayfa Sayısı:</strong> @Model.Pages
                            </p>
                            <p class="card-text">
                                <strong>Açıklama:</strong> 
                            </p>
                            <p class="card-text">
                                @Model.Description 
                            </p>
                            <div class="mt-4">
                                <button class="btn btn-primary">Sepete Ekle</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
